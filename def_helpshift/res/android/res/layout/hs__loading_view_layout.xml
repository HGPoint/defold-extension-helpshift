<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/hs__loading_view_close_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:src="@drawable/hs__cross_icon" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/hs__chat_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:alpha="0.4"
            android:src="@drawable/hs__chat_icon" />

        <ProgressBar
            android:id="@+id/hs__progress"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="8dp"
            android:alpha="0.4"
            android:foregroundTint="@android:color/darker_gray" />
    </LinearLayout>
</RelativeLayout>
